{% extends "layouts/base.njk" %}

{% block main %}

<article>
    <div class="mb-8">
        <p class="mb-2 text-4xl font-bold">{{ title }}</h1> 
        <p class="text-lg font-medium text-gray-300 "> {{ date | dateFormat("DDD") }} </p>
        {% for tag in tags %} 
            <a class="mr-1 text-lg italic text-gray-300" href="/tags/#{{ tag }}">#{{ tag }}</a>
        {% endfor %}
    </div>

    <div class="content">
        {{ content | safe }}
    </div>

    <script src="https://giscus.app/client.js"
            data-repo="ishchow/personal-site"
            data-repo-id="MDEwOlJlcG9zaXRvcnkyNjE2NTU2ODI="
            data-category="Post Comments"
            data-category-id="DIC_kwDOD5iMgs4CAmWd"
            data-mapping="pathname"
            data-reactions-enabled="0"
            data-emit-metadata="0"
            data-theme="dark_high_contrast"
            data-lang="en"
            crossorigin="anonymous"
            async>
    </script>
</article>
{% endblock %}
